<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChoiceFragment">


    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motion_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_faded"
        app:layoutDescription="@xml/fragment_choice_scene">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/card_daily_reading"
            android:layout_width="232dp"
            android:layout_height="400dp"
            android:src="@drawable/daily_reading_card"
            app:altSrc="@drawable/more_daily_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:overlay="true"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="439dp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/card_love_reading"
            android:layout_width="232dp"
            android:layout_height="400dp"
            android:src="@drawable/love_reading_card"
            app:altSrc="@drawable/more_love_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:overlay="true"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="439dp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/card_work_reading"
            android:layout_width="232dp"
            android:layout_height="400dp"
            android:src="@drawable/work_reading_card"
            app:altSrc="@drawable/more_work_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:overlay="true"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="439dp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/card_weekly_reading"
            android:layout_width="232dp"
            android:layout_height="400dp"
            android:src="@drawable/weekly_reading_card"
            app:altSrc="@drawable/more_week_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:overlay="true"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="439dp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/card_ask_your_question"
            android:layout_width="232dp"
            android:layout_height="400dp"
            android:src="@drawable/ask_reading_card"
            app:altSrc="@drawable/more_ask_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:overlay="true"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="439dp" />

        <Button
            android:id="@+id/button_choice"
            android:layout_width="155dp"
            android:layout_height="75dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/cinzel"
            android:text="@string/choice_button"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="40dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@+id/button_choice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_choice"
            app:srcCompat="@drawable/button_custom_back" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

</androidx.constraintlayout.widget.ConstraintLayout>